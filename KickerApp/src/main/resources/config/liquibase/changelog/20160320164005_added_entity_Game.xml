<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity Game.
    -->
    <changeSet id="20160320164005" author="jhipster">
        <createTable tableName="game">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="team1_score" type="integer"/>
            
            <column name="team2_score" type="integer"/>
            
            <column name="duration" type="${floatType}"/>
            
            <column name="team1_player1_id" type="bigint"/>
            <column name="team1_player2_id" type="bigint"/>
            <column name="team2_player1_id" type="bigint"/>
            <column name="team2_player2_id" type="bigint"/>
            <!-- jhipster-needle-liquibase-add-column - Jhipster will add columns here, do not remove-->
        </createTable>
        
        <addForeignKeyConstraint baseColumnNames="team1_player1_id"
                                 baseTableName="game"
                                 constraintName="fk_game_team1_player1_id"
                                 referencedColumnNames="id"
                                 referencedTableName="player"/>

        <addForeignKeyConstraint baseColumnNames="team1_player2_id"
                                 baseTableName="game"
                                 constraintName="fk_game_team1_player2_id"
                                 referencedColumnNames="id"
                                 referencedTableName="player"/>

        <addForeignKeyConstraint baseColumnNames="team2_player1_id"
                                 baseTableName="game"
                                 constraintName="fk_game_team2_player1_id"
                                 referencedColumnNames="id"
                                 referencedTableName="player"/>

        <addForeignKeyConstraint baseColumnNames="team2_player2_id"
                                 baseTableName="game"
                                 constraintName="fk_game_team2_player2_id"
                                 referencedColumnNames="id"
                                 referencedTableName="player"/>

    </changeSet>
</databaseChangeLog>
